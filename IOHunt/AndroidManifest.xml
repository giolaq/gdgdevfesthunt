<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laquysoft.droidcontorinohunt"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logodroidcon"
        android:label="@string/app_name"
        android:theme="@style/Theme.App" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <activity
            android:name="com.laquysoft.droidcontorinohunt.ClueActivity"
            android:keepScreenOn="true"
            android:label="@string/title_activity_clue_message"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <category android:name="android.intent.category.DEFAULT" />

            <intent-filter>
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.laquysoft.droidcontorinohunt.NavActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.laquysoft.droidcontorinohunt.TagsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.laquysoft.droidcontorinohunt.DecoyActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.laquysoft.droidcontorinohunt.ScreenSlidePagerActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.laquysoft.droidcontorinohunt.ReauthActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.laquysoft.droidcontorinohunt.ZoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.laquysoft.droidcontorinohunt.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.laquysoft.droidcontorinohunt.VictoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.laquysoft.droidcontorinohunt.TriviaExplainerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.laquysoft.droidcontorinohunt.TriviaQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.laquysoft.droidcontorinohunt.NFCShimActivity"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="nfchunt.appspot.com"
                    android:pathPrefix="/f"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="nfchunt.appspot.com"
                    android:pathPrefix="/f"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <service
            android:name="com.laquysoft.droidcontorinohunt.ScoreService"
            android:enabled="true" />
        <service
            android:name="com.laquysoft.droidcontorinohunt.AchievementService"
            android:enabled="true" />
    </application>

</manifest>